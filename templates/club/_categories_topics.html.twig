{% if topics_announce|length > 0 %}
    <h3>Annonces</h3>
    <ul>
        {% for topic in topics_announce %}
            <li>
                <div>
                    <a href="{{ path('topic_show', {'id': topic.id}) }}">{{ topic.libelle }}</a>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endif %}

<h3>Discussions</h3>
<ul>
    {% for topic in topics %}
        <li>
            <div>
                <a href="{{ path('topic_show', {'id': topic.id}) }}">{{ topic.libelle }}</a>
            </div>
        </li>
    {% endfor %}
</ul>